  "author": "Jack Moore <jtmthf@mst.edu>",
  "license": "MIT",
  "scripts": {
    "dev": "cross-env TS_NODE_PROJECT=\"config/tsconfig.json\" webpack-dev-server --config config/webpack.config.ts --mode development",
    "build": "cross-env TS_NODE_PROJECT=\"config/tsconfig.json\" webpack --config config/webpack.config.ts --mode production",
    "format": "prettier \"{src,config}/**/*.{ts,tsx}\"",
